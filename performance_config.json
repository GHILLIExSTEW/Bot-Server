{
  "flask": {
    "threaded": true,
    "processes": 1,
    "debug": false,
    "use_reloader": false,
    "host": "0.0.0.0",
    "port": 5000
  },
  "caching": {
    "redis_enabled": true,
    "cache_ttl": 300,
    "guild_cache_ttl": 300,
    "user_cache_ttl": 180
  },
  "database": {
    "pool_size": 10,
    "pool_timeout": 30,
    "connection_ttl": 3600
  },
  "discord_api": {
    "timeout": 10,
    "connection_pool_size": 30,
    "dns_cache_ttl": 300
  },
  "optimization": {
    "async_discord_auth": true,
    "concurrent_requests": true,
    "cache_bot_guilds": true,
    "compress_responses": true
  }
}